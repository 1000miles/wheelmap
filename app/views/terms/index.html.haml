
= semantic_form_for current_user, :url => terms_user_path(current_user) do |form|

  - terms_blog_url = I18n.locale == :de ? 'http://wheelmap.org/impressum/nutzungsbedingungen/' : 'http://wheelmap.org/en/imprint/terms-of-use/'
  %iframe{:align => 'center', :src => terms_blog_url, :width => '100%', :height => '300', :frameborder => '0', :seamless => 'seamless'}

  = form.input :terms

  - privacy_blog_url = I18n.locale == :de ? 'http://wheelmap.org/impressum/datenschutzerklarung/' : 'http://wheelmap.org/en/imprint/privacy/'
  %iframe{:align => 'center', :src => privacy_blog_url, :width => '100%', :height => '300', :frameborder => '0', :seamless => 'seamless'}

  = form.input :privacy_policy
  = form.actions do
    = form.action :submit, :label => t('formtastic.labels.save')
