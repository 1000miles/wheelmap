%section#node-photos
  %h2
    Fotos von diesem Ort:
  =form_tag(nil, { id: 'node-photo-dropzone' }) do
    #node-photo-dropzone-error.alert.alert-error
    %ul
      -# = list_of(node_photos.photos.reject{|photo| photo.new_record?}) do |photo|
        = link_to_photo photo
      %li
        = link_to image_path('overlay-bsp_green.png'), :'data-toggle' => "lightbox" do
          = image_tag('overlay-bsp_green.png', class: 'img-polaroid')
      %li
        = link_to image_path('overlay-bsp_orange.png') do
          = image_tag('overlay-bsp_orange.png', class: 'img-polaroid')
      %li
        = link_to image_path('overlay-bsp_red.png') do
          = image_tag('overlay-bsp_red.png', class: 'img-polaroid')
      %li
        = link_to image_path('overlay-bsp_grey.png') do
          = image_tag('overlay-bsp_grey.png', class: 'img-polaroid')
      %li.clickable
        = link_to (user_signed_in? ? (current_user.terms? ? nil : terms_path) : new_user_session_path), :'data-toggle' => user_signed_in? && current_user.terms? ? 'dropzone' : '' do
          %i.icon-camera
          = t('nodes.show.link.upload')