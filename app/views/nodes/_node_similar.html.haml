- if (similar_pois = node_similar.sorted_similar_pois[0..5]).length > 0
  %section#node-similar-locations
    %h2=t('.similar', name: node_similar.node_type.name)
    %ul.unstyled
      - similar_pois.each do |s|
        %li
          %span{:class => "wheelchair #{s.wheelchair}"}
          = link_to s.headline, node_path(s)
          %span.distance
            = "#{node_similar.distance_to_in_meter(s).round}m"
