<%- cache("#{I18n.locale}/nodes/bbox_#{@places.map(&:updated_at).map(&:to_i).max}_#{[@left, @bottom, @right, @top].join','}", :expires_in => 1.hour) do -%>
<%= Yajl::Encoder.encode({:type => 'FeatureCollection', :bbox => [@left, @bottom, @right, @top], :features => @places.map{|node| node_hash = node.to_geojson; node_hash[:properties].update({'marker' => image_path(node.marker), :icon => image_path(node.icon)});node_hash}}, :pretty => Rails.env.development?).html_safe %>
<%- end -%>