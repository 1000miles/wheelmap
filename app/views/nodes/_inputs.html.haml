- form.inputs :name => t('formtastic.titles.basic'), :id => 'basic' do
  - form.semantic_fields_for :tag do |tag|
    = tag.input '][k', :as => :hidden, :input_html => {:value => 'name'}
    = tag.input '][v', :label => t('formtastic.labels.name'), :required => false, :input_html => {:value => @node.tags['name']}
  %li.select.required#node-wheelchair-input{:class => error_message_on(@node, :wheelchair) ? 'error' : '' }
    = form.label :wheelchair, :required => true
    %select#node-wheelchair{:name => 'node[wheelchair]'}
      = options_for_wheelchair_status(@node.wheelchair)        

  = form.input :wheelchair_description, :required => false
  %li.select.required#node-type-input{:class => error_message_on(@node, :type) ? 'error' : ''}
    = form.label :type, :required => true
    %select#node-type{:name => 'node[type]'}
      = render :partial => 'options_for_type', :object => inputs.type
  =form.input :id, :as => :hidden
  =form.input :lon, :input_html =>{:readonly => 'readonly'}
  =form.input :lat, :input_html =>{:readonly => 'readonly'}, :hint => true
  =form.input :version, :as => :hidden
  =form.input :changeset, :as => :hidden
  =form.input :user, :as => :hidden
  =form.input :uid, :as => :hidden
  =form.input :visible, :as => :hidden

- form.inputs :name => t('formtastic.titles.optional'), :id => 'optional' do
  - form.semantic_fields_for :tag do |tag|
    = tag.input '][k', :as => :hidden, :input_html => {:value => 'addr:street'}
    = tag.input '][v', :label => t('formtastic.labels.street'), :required => false, :input_html => {:value => @node.tags['addr:street']}
    
    = tag.input '][k', :as => :hidden, :input_html => {:value => 'addr:housenumber'}
    = tag.input '][v', :label => t('formtastic.labels.housenumber'), :required => false, :input_html => {:value => @node.tags['addr:housenumber']}
    
    = tag.input '][k', :as => :hidden, :input_html => {:value => 'addr:postcode'}
    = tag.input '][v', :label => t('formtastic.labels.postcode'), :required => false, :input_html => {:value => @node.tags['addr:postcode']}
    
    = tag.input '][k', :as => :hidden, :input_html => {:value => 'addr:city'}
    = tag.input '][v', :label => t('formtastic.labels.city'), :required => false, :input_html => {:value => @node.tags['addr:city']}
    
    = tag.input '][k', :as => :hidden, :input_html => {:value => 'website'}
    = tag.input '][v', :label => t('formtastic.labels.website'), :required => false, :input_html => {:value => @node.tags['website']}, :hint => t('formtastic.hints.website')
    
    = tag.input '][k', :as => :hidden, :input_html => {:value => 'phone'}
    = tag.input '][v', :label => t('formtastic.labels.phone'), :required => false, :input_html => {:value => @node.tags['phone']}, :hint => t('formtastic.hints.phone')
