#map_wrapper
  #minimap
  = link_to t('.link.large_map'), root_path, :onclick => "location=permalink('#{root_path}');return false;", :class => 'magnify'


  
%h1
  =@node.name
  %span.addition
    = link_to t('.link.edit_node'), edit_node_path(@node)

:javascript
  var lon = parseFloat("#{@node.lon}");
  var lat = parseFloat("#{@node.lat}");
  object_types.push("#{@node.type}");

%table#accessibility{:class => "#{dom_class(@node)}"}
  %tr
    
    %th=t('formtastic.labels.wheelchair')
    %td= t("wheelchairstatus.#{@node.wheelchair}")
      
      
  -if @node.wheelchair_description
    %tr
      %th=t('formtastic.labels.wheelchair_description')
      %td{:colspan => 2}= @node.wheelchair_description

%table#properties{:class => "#{dom_class(@node)}"}
  %tr
    %th=t('formtastic.labels.category')
    
    - @node.category
    %td{:class => @node.category}
      - if @node.category
        = t("poi.category.#{@node.category}")
      - else
        &nbsp;

  %tr
    %th=t('formtastic.labels.type')
    %td
      - if @node.type
        = t("poi.name.#{@node.category}.#{@node.type}")
      -else
        &nbsp;
  %tr
    %th=t('formtastic.labels.street')
    %td
      =@node.tags['addr:street']
      =@node.tags['addr:housenumber'] || '&nbsp;'
  %tr
    %th=t('formtastic.labels.postcode')
    %td=@node.tags['addr:postcode'] || '&nbsp;'
  %tr
    %th=t('formtastic.labels.city')
    %td=@node.tags['addr:city'] || '&nbsp;'

  %tr
    %th=t('formtastic.labels.website')
    %td
      -if @node.tags['website']
        %a{:href => @node.tags['website'], :rel => 'nofollow', :target => '_blank'}>=@node.tags['website']

  %tr
    %th=t('formtastic.labels.phone')
    %td
      =@node.tags['phone'] || '&nbsp;'


- content_for :breadcrumbs do
  = link_to t('breadcrumbs.root'), root_path
  = link_to 'Deutschland', root_path
  = link_to 'Berlin', root_path, :class => 'last'

- content_for :javascript do
  :javascript
    jumpTo(parseFloat("#{@node.lon}"), parseFloat("#{@node.lat}"), 17);
    createDraggableLayer(placesStyle(),parseFloat("#{@node.lon}"), parseFloat("#{@node.lat}"));