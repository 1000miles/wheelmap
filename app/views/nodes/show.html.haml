%h1
  =@node.name
  %span.addition
    = link_to 'Platz bearbeiten', edit_node_path(@node)
    
.status
  %dl{:id => dom_id(@node)}
    %dt
      Barrierefrei:
    %dd
      - %w{yes limited no unknown}.each do |status|
        %input{:type => 'radio', :name => "wheelchair_#{@node.id}", :value => status, :class => status, :id => "wheelchair_#{@node.id}_#{status}"}
        %label{:for => "wheelchair_#{@node.id}_#{status}"}
          = status
        
    %dt
      Infos zur Barrierefreiheit:
    %dd
      Toiletten sind zu eng

.properties
  %dl
    %dt Typ:
    %dd=@node.type

    %dt Strasse:
    %dd=@node.tags['address:street']

    %dt PLZ:
    %dd=@node.tags['address:zip']

    %dt Ort:
    %dd=@node.tags['address:city']

    %dt Webseite:
    %dd=@node.tags['website']

    %dt Telefon:
    %dd=@node.type

.map
  