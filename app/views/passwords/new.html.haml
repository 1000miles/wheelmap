- semantic_form_for resource_name, resource, :url => password_path(resource_name) do |form|
  -form.inputs :name => t('devise.password_recovery.headline') do
    = form.input :email, :label => t('devise.password_recovery.form.labels.email')
  -form.buttons do
    = form.commit_button t('devise.password_recovery.form.submit')
    %p.hint= t('devise.mandatory')

= render :partial => "shared/devise_links"