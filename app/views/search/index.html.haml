%h2
  =h t('.search.for', :q => params[:q])
- unless @result.empty?
  %ul#searchresult
    - @result.each do |entry|
      %li
        = link_to "#{entry['display_name']}", root_path(:a => :b, :lat => entry['lat'], :lon => entry['lon'], :zoom => 17, :q => params[:q], :node_id => entry['osm_type'] == 'way' ? (entry['osm_id'].to_i * -1) : entry['osm_id'])
- else
  %p
    =t('.search.not_found')