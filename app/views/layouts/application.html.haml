!!!
%html(lang="#{I18n.locale}")
  %head
    %meta(charset="utf-8")
    %title= t('header.title')
    = stylesheet_link_tag 'screen'
    - if head = yield(:head)
      = head
    /[if IE]
      :javascript
        var ce=document.createElement;ce('header');ce('nav');ce('article');ce('section');ce('footer');ce('aside');ce('time')
  %body(class=browser_class)
    #page
      %header
        = link_to image_tag('logo', :alt => t('header.tagline')), root_path, :id => 'logo'
        %nav
          %ul
            %li
              = link_to t('header.navigation.home'), root_path
            %li.login
              - if logged_in?
                = t('layouts.application.logged_in_as') + " #{current_user.email} "
                = link_to t('layouts.application.links.logout'), logout_path , :method => 'delete'
              - else
                = link_to t('layouts.application.links.login'), login_path
      - [:notice, :error, :warning].each do |type|
        - if flash[type]
          .flash(id="flash-Rails::TemplateRunner")= flash[type]
      = yield
      %footer
        Â© 2010 Nico Hagenburger/Hagenburger GmbH, Berlin
    = javascript_include_tag 'jquery', 'application', :cache => true
    - if jquery = yield(:jquery)
      :javascript
        $(function(){#{jquery}})
