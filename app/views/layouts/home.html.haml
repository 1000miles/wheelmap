!!!
%html(lang="#{I18n.locale}")
  %head
    = render :partial => 'shared/meta'

    / HOPTOAD START
    = hoptoad_javascript_notifier
    / HOPTOAD END
    
    = yield(:head) || content_tag(:title, t('header.title'))
    
    = render :partial => 'shared/html5_elements'
    
    = yield :javascript_constants

    = stylesheet_link_tag 'screen', :cache => 'screens'

  %body(class=browser_class)
    = render :partial => '/shared/header'
    #map
      = yield
      
    = show_flash
    
    = render :partial => 'shared/footer'
        
    = render :partial => 'shared/google_tracking'

    - if browser_class == 'trident'
      = javascript_include_tag 'jquery.ie.min'
    - else
      = javascript_include_tag 'jquery'
      
    = javascript_include_tag 'openlayers', 'autocomplete', 'cookie', 'uservoice', 'icons', 'openlayers_i18n', 'osm', 'application', 'map'

    = yield :javascript
