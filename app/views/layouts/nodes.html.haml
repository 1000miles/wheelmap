!!!
%html(lang="#{I18n.locale}")
  %head
    %meta(charset="utf-8")
    = render :partial => 'shared/meta'
    
    = stylesheet_link_tag 'node', :cache => 'nodes'
    = stylesheet_link_tag "#{root_path}theme/default/style", :cache => true
    - if @content_for_head
      = yield(:head)
    - else
      %title= t('header.title')

    /[if IE]
      :javascript
        var ce=document.createElement;ce('header');ce('nav');ce('article');ce('section');ce('footer');ce('aside');ce('time');
    :javascript
      var object_types = ["#{ (session['amenities']).join('","')}"];
      var lat  = #{params[:lat]  || GeoCache.latlon(request.remote_addr).first};
      var lon  = #{params[:lon]  || GeoCache.latlon(request.remote_addr).last};
      var zoom = #{params[:zoom] || 17};
      var language = '#{I18n.locale}';
      
    
    %link{:rel=>"shortcut icon", :href=>"/favicon.ico"}        
  %body(class=browser_class)
    = render :partial => '/shared/header'      
    #main
      = show_flash
        
      = yield
    %footer
      %nav      
        - link_to 'http://sozialhelden.de', :id => 'sozialhelden' do
          = image_tag('sozialhelden.png', :alt => t('.banner.alt'))
    = javascript_include_tag 'openlayers', 'jquery', 'util', 'autocomplete', 'uservoice', 'icons', 'osm', 'application', 'minimap', :cache => "minimaps_#{I18n.locale}"
    :javascript
      OpenLayers.ImgPath = '#{root_url}img/'          
    - if @content_for_jquery
      = yield :jquery
      :javascript
        $(function(){#{jquery}})
    - if @content_for_javascript
      = yield :javascript
    = render :partial => 'shared/google_tracking'

