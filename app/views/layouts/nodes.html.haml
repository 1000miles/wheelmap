!!!
%html(lang="#{I18n.locale}")
  %head
    = render :partial => 'shared/meta'
    
    / HOPTOAD START
    = hoptoad_javascript_notifier
    / HOPTOAD END
    
    - if content_for?(:head)
      = content_for(:head)
    - else
      %meta{:name => 'description', :content => t('header.meta.description')}
      %title=t('header.title')
    

    = render :partial => 'shared/html5_elements'
    
    = content_for :javascript_constants
      
    = stylesheet_link_tag 'node', :cache => 'nodes'

  %body(class=browser_class)
    = render :partial => '/shared/header'      
    #main
      = show_flash
      = yield

    = render :partial => 'shared/footer'  

    = render :partial => 'shared/google_tracking'

    = javascript_include_tag 'openlayers', 'cloudmade', 'jquery', 'autocomplete', 'cookie', 'uservoice', 'icons', 'osm', 'application', :cache => "minimaps_#{I18n.locale}"
    
    = content_for :javascript