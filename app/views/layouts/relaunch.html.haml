!!!
%html(lang="#{I18n.locale}")
  %head
    = include_stylesheets :relaunch, :media => 'screen, projection'
    = include_javascripts :relaunch, :media => 'screen, projection'

    :css

      html,body {
        margin:0;
        padding:0;
        height:100%; /* braucht es fÃ¼r die min-height des Containers */
      }

      header {
        position:absolute;
        height: 50px;
        left:0;
        top:0;
        width:100%;
        border-bottom: 1px solid #FFF;

        background-color: #f6f5f4;
        background-image: -webkit-gradient(linear, left top, left bottom, from(#ffffff), to(#edecea));
        background-image: -webkit-linear-gradient(top, #ffffff, #edecea);
        background-image: -moz-linear-gradient(top, #ffffff, #edecea);
        background-image: -o-linear-gradient(top, #ffffff, #edecea);
        background-image: -ms-linear-gradient(top, #ffffff, #edecea);
        background-image: linear-gradient(top, #ffffff, #edecea);
        filter: progid:DXImageTransform.Microsoft.gradient(GradientType=0,StartColorStr='#ffffff', EndColorStr='#edecea');
        z-index: 1001;
      }

      nav#toolbar {
        background-color: darkblue;
        position:absolute;
        height: 50px;
        width: 100%;
        top:50px;
        height: 50px

        background: url(images/bg_toolbar.png) #304151;
        background-image: -webkit-image-set(url(images/bg_toolbar.png) 1x, url(img/bg_toolbar@2x.png) 2x);
        box-shadow: 0px 0px 10px #444;
        z-index: 998;
      }

      section {
        position: absolute;
        top:100px;
        bottom:30px;
        left:0;
        width:100%;
        background: yellow;

      }

      footer {
        position: fixed;
        width: 100%;
        bottom: 0px;
        background-color: #EEEDEB;
        border-top: 1px solid #CCC;
        height: 30px
      }

  %body
    %header
      HEADER
      -#= render :partial => '/shared/header'
    %nav#toolbar
      NAV
    %section#map
      = yield
    %footer
      FOOTER
      -#= render :partial => 'shared/footer'



    = content_for :javascript