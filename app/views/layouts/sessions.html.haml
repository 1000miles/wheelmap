!!!
%html(lang="#{I18n.locale}")
  %head
    %meta(charset="utf-8")
    %title= t('header.title')
    = render :partial => 'shared/meta'
    
    = stylesheet_link_tag 'node', :cache => 'nodes'
    
    - if @content_for_head
      = yield(:head)
    /[if IE]
      :javascript
        var ce=document.createElement;ce('header');ce('nav');ce('article');ce('section');ce('footer');ce('aside');ce('time');
    :javascript      
    
    %link{:rel=>"shortcut icon", :href=>"/favicon.ico"}        
  %body(class=browser_class)
    = render :partial => '/shared/header'      
    #main
      = show_flash
        
      = yield
    %footer
      %nav      
        - link_to 'http://sozialhelden.de', :id => 'sozialhelden' do
          = image_tag('sozialhelden.png', :alt => t('.banner.alt'))

    = render :partial => 'shared/google_tracking'

