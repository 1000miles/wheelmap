/ footer start
- cache("#{I18n.locale}/shared/_footer.html.haml'}", :expires_in => 10.minutes) do
  .social
    %table.counter
      %tr
        %td>=image_tag('/images/mini_marker.png', :size => '28x17', :title => "#{t('wheelchairstatus.yes')}:#{Poi.fully_accessible.count}\n#{t('wheelchairstatus.limited')}:#{Poi.limited_accessible.count}\n#{t('wheelchairstatus.no')}:#{Poi.not_accessible.count}")
        %td{:style => "background: url('#{image_path('bubble.png')}') no-repeat left center;background-position: 0px 0px"} &nbsp;
        %td{:style => "padding-right: 5px;background: url('#{image_path('bubble.png')}') no-repeat 100% 0px"}=Poi.tagged.count
    =link_to "Tweet", "http://twitter.com/share", :class => "twitter-share-button", :style => 'display:none'
    %iframe{:src => "http://www.facebook.com/plugins/like.php?app_id=231074856943658&href=#{u(root_url)}&send=false&layout=button_count&width=130&show_faces=false&action=like&colorscheme=light&height=20", :scrolling => "no", :frameborder => "0", :style =>"border:none; overflow:hidden; width:130px; height:20px;", :allowTransparency => "true"}

  .supporter
    %span
      = t('wheelmap.footer.based_on')
    = link_to "OpenStreetMap", 'http://openstreetmap.org'
    %span>
      |
      = t('wheelmap.footer.main_supporter')
    = image_tag('immoscout.jpg', :width => 43, :height => 20, :alt => 'ImmobilienScout24', :title => 'ImmobilienScout24')
    %span>
      |
    = link_to "http://rollstuhlsport.de", :target => '_blank', :class => 'icon' do
      = image_tag "/images/drs-logo.jpg", :size => '49x20'
    %span>
      |
      = t('wheelmap.footer.a_project_of')
    = link_to 'http://sozialhelden.de', :id => 'sozialhelden', :title => 'Sozialhelden' do
      = image_tag('sozialhelden.png', :class => 'sozialhelden_logo', :alt => t('layouts.application.banner.alt'), :width => 120, :height => 24)

/ footer end