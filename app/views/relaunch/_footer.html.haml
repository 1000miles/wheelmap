/ footer start
- cache("#{I18n.locale}/relaunch/_footer.html.haml'}", :expires_in => 10.minutes) do
  %footer#footer
    %ul.social
      %li
        %table.counter
          %tbody
            %tr
              %td
                =image_tag('/images/mini_marker.png', :size => '28x17', :title => "#{t('wheelchairstatus.yes')}:#{Poi.fully_accessible.count}\n#{t('wheelchairstatus.limited')}:#{Poi.limited_accessible.count}\n#{t('wheelchairstatus.no')}:#{Poi.not_accessible.count}")
              %td{:style => "background: url('http://asset1.wheelmap.org/images/bubble.png?1362741213') no-repeat left center;background-position: 0px 0px"} &nbsp;
              %td{:style => "padding-right: 5px;background: url('http://asset1.wheelmap.org/images/bubble.png?1362741213') no-repeat 100% 0px"}=Poi.tagged.count
        %li=link_to "Tweet", "http://twitter.com/share", :class => "twitter-share-button", :style => 'display:none'
        :javascript
          !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
      %li
        %iframe{:src => "http://www.facebook.com/plugins/like.php?app_id=231074856943658&href=#{u(root_url)}&send=false&layout=button_count&width=130&show_faces=false&action=like&colorscheme=light&height=20", :scrolling => "no", :frameborder => "0", :style =>"border:none; overflow:hidden; width:130px; height:20px;", :allowTransparency => "true"}
    %ul.credits
      %li
        %span= t('wheelmap.footer.main_supporter')
        = image_tag('immoscout@2x.png', :size => '42x20', :alt => 'ImmobilienScout24', :title => 'ImmobilienScout24', :style => "margin-top: -3px;")
      %li
        = link_to "http://rollstuhlsport.de", :target => '_blank', :class => 'icon', :title => 'Deutscher Rollstuhlsportverband' do
          = image_tag "/images/drs-logo@2x.png", :size => '47x20', :style => 'margin-top:-3px'
      %li
        %span= t('wheelmap.footer.a_project_of')
        = link_to 'http://sozialhelden.de', :id => 'sozialhelden', :title => 'Sozialhelden' do
          = image_tag('sozialhelden@2x.png', :class => 'sozialhelden_logo', :alt => t('layouts.application.banner.alt'), :size => '120x24', :style => "margin-top: -6px;")

/ footer end