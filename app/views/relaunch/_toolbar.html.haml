#toolbar
  .content
    .btn-toolbar.center
      %form.navbar-form{:action =>"/search", :method => "GET", :style => 'display:inline-block;margin-bottom:0'}
        .input-append{:style => 'margin:0 10px'}
          %input#search{:type => "text", :name => "q", :value => params[:q].present? ? params[:q] : nil, :autocomplete => "off", :placeholder => t('header.searchbar.placeholder')}
          %button.btn{:type => "submit", :value => t('header.searchbar.find')}
            %i.icon-search.icon-white

      .btn-group.status-filter(data-toggle="buttons-checkbox")
        %button.btn.yes{:'data-value' => 'yes', :class => cookies["filter_yes"].present? ? 'active' : nil }
          %span{:'data-value' => 'yes'}
        %button.btn.no{:'data-value' => 'no', :class => cookies["filter_no"].present? ? 'active' : nil }
          %span{:'data-value' => 'yes'}
        %button.btn.limited{:'data-value' => 'limited', :class => cookies["filter_limited"].present? ? 'active' : nil }
          %span{:'data-value' => 'yes'}
        %button.btn.unknown{:'data-value' => 'unknown', :class => cookies["filter_unknown"].present? ? 'active' : nil }
          %span{:'data-value' => 'yes'}


      %select.selectpicker.show-menu-arrow.category-filter{:multiple => 'multiple', :title => 'Alle', :'data-style' => "btn-info", :'data-selected-text-format' => "count>2"}
        - Category.all.sort_by(&:localized_name).each do |category|
          %option{ :value => category.identifier, :selected => cookies["filter_#{category.identifier}"].present? ? "selected" : nil }= category.localized_name
