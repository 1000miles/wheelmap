= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |form|
  = form.inputs :name => t('devise.sign_up.headline') do
    = form.input :email, :label => t('devise.sign_up.form.labels.email')
    = form.input :password, :label => t('devise.sign_up.form.labels.password'), :hint => false
    = form.input :password_confirmation, :label => t('devise.sign_up.form.labels.password_confirmation')
    
    -if resource.is_a? User
      = form.input :wants_newsletter, :input_html => {:class => 'newsletter'}, :label => t('devise.sign_up.form.labels.wants_newsletter')
    
  = form.buttons do
    = form.commit_button t('devise.sign_up.form.submit')
    %p.hint= t('devise.mandatory')

= render :partial => "devise/shared/links"
