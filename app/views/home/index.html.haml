#sidebar{:class => cookies['minimized_filter'] == 'true' ? 'minimized' : ''}
  = image_tag('close.gif', :size => '17x17', :alt => 'x', :class => cookies['minimized_filter'] == 'true' ? 'maximize' : 'minimize')
  = render :partial => 'home/wheelchair_status_filter'
  %div{:class => cookies['minimized_filter'] == 'true' ? 'maximize' : 'minimize'}
    &nbsp;
  = render :partial => 'home/category_filter'
  .button_wheelmap
    Die Wheelmap für's Smartphone
    
  .button_donate
    Unterstütze Wheelmap
  
#spinner

#facebox
  %h2=t('.ie.warning.headline')
  .content
    %p=t('.ie.warning.message')

    %p
      = link_to t('.ie.action.upgrade'), "http://www.updateyourbrowser.net/en/", :class => 'button primary'
      = link_to t('.ie.action.ignore'), '#', :class => 'button secondary close', :onclick => 'return false;'

- content_for :javascript_constants do
  :javascript
    var lat = #{params[:lat] || cookies['last_lat'] || GeoCache.latlon(request.remote_addr).first};
    var lon = #{params[:lon] || cookies['last_lon'] || GeoCache.latlon(request.remote_addr).last};
    var zoom = #{params[:zoom] || cookies['last_zoom'] || 14};
    var language = '#{I18n.locale}';

-content_for :javascript do
  :javascript
    drawmap(defaultControls(), 'map');
    createPlacesLayer(placesStyle());
    jumpTo(lon,lat,zoom);

  - if browser_class.include?('trident-7') || browser_class.include?('trident-6')
    :javascript
      if($.cookie('ie_warning') == 1){
        // ignore, user saw IE warning.
      } else {
        $("#facebox").overlay({
          top: 260,
          mask: {
            color: '#cccccccc', loadSpeed: 200, opacity: 0.5
          },
          closeOnClick: false,
          load: true
        });
        $.cookie('ie_warning', 1);
      }

  :javascript  
    (function(d, t) {
      var g = d.createElement(t),
      s = d.getElementsByTagName(t)[0];
      g.async = true;
      g.src = 'https://apis.google.com/js/plusone.js';
      s.parentNode.insertBefore(g, s);
    })(document, 'script');

  = render :partial => 'shared/google_event_tracking'