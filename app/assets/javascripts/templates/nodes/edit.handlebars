<div class="node-wrapper">
    <article class="container node-container">
        <header class="headline-gradient node-header">
            <div class="breadcrumbs">
                <a {{action backToMap}} class="btn back">{{t 'nodes.show.link.back' }}</a>
                <ol class="unstyled">
                    {{#each breadcrumbs}}
                        <li><i class="icon-angle-right"></i>{{this}}</li>
                    {{/each}}
                </ol>
                <a {{action backToMap}} class="btn close"><i class="icon-remove"></i></a>
            </div>
            <h1 itemprop="name">{{headline}}</h1>
            {{#if address}}
                <address>{{address}}</address>
            {{/if}}
        </header>
        <div class="row-fluid">
            <section class="span8 node-content">
                <section class="node-status">
                    <div class="row-fluid">
                        <div class="span6">
                            <h2>{{t 'nodes.node_status.wheelchair_accessibility' }}</h2>

                            {{view Wheelmap.NodePopupStatusDropdownView }}
                        </div>
                    </div>
                </section>
                <form method="post" class="node-form form-horizontal">

                    <fieldset>
                        <div class="control-group">
                            <label class="control-label" for="name">Name</label>
                            <div class="controls controls-row">
                                {{input value=name placeholder="Name" class="span12" name="name" }}
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="category">Typ</label>
                            <div class="controls controls-row">
                                {{view Ember.Select class="span6" viewName="select" contentBinding="categories" optionLabelPath="model.name" }}
                            </div>
                        </div>
                    </fieldset>

                    <fieldset>
                        <div class="control-group">
                            <label class="control-label" for="street">Adresse</label>
                            <div class="controls controls-row">
                                {{input value=addr.street placeholder="Straße" class="span10" name="street" }}
                                {{input value=addr.housenumber placeholder="Hausnr." class="span2" name="housenumber" }}
                            </div>
                            <div class="controls controls-row">
                                {{input value=addr.postcode placeholder="Posteitzahl" class="span3" name="postcode" }}
                                {{input value=addr.city placeholder="Ort" class="span9" name="city" }}
                            </div>
                        </div>
                    </fieldset>

                    <fieldset>
                        <div class="control-group">
                            <label class="control-label" for="website">Webseite</label>
                            <div class="controls controls-row">
                                {{input value=website placeholder="Webseite" class="span12" name="website" }}
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="phone">Telefon</label>
                            <div class="controls controls-row">
                                {{input value=phone placeholder="phone" class="span12" name="phone" }}
                            </div>
                        </div>
                    </fieldset>

                    <fieldset>
                        <div class="control-group">
                            <label class="control-label" for="note">Hinweis</label>
                            <div class="controls controls-row">
                                {{textarea value=note rows="3" class="span12" placeholder="Hinweis / Zusatzinfo / Kommentar" name="note"}}
                            </div>
                        </div>
                    </fieldset>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary pull-right">Speichern</button>
                        <button {{action backToMap}} type="button" class="btn pull-left wheelmap-btn">Abbrechen</button>
                    </div>
                </form>
            </section>
            <section class="span4 node-aside">
                <section class="node-map">
                    <h2>{{t 'nodes.node_map.map' }}</h2>

                    <div class="map">
                        <a {{action backToMap}}><img class="img-polaroid" {{ bind-attr src="view.mapImage" alt="headline" }}>
                        </a>

                        <div {{bind-attr class=':leaflet-marker-icon view.markerWheelchairClass' }}>
                            <div {{bind-attr class=':marker-icon view.markerIconClass' }}></div>
                        </div>
                    </div>
                    <small class="pull-right bottom"><a href="http://www.openstreetmap.org/copyright">© OpenStreetMap
                        contributors</a></small>
                </section>
            </section>
        </div>
    </article>
</div>